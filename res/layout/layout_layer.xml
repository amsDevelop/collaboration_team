<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:layout_width="600dip"
        android:layout_height="wrap_content"
        android:gravity="center"
        style="@style/text_size"
        android:text="图层设置" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_marginTop="10dip"
        android:gravity="center_vertical" >

        <Button
             android:id="@+id/id_btn_layer_1"
            style="@style/layer_btn"
            android:layout_alignParentLeft="true"
            android:text="卫星图" />

        <Button
            android:id="@+id/id_btn_layer_2"
            style="@style/layer_btn"
            android:layout_centerInParent="true"
            android:text="基础地理" />

        <Button
            android:id="@+id/id_btn_layer_3"
            style="@style/layer_btn"
            android:layout_alignParentRight="true"
            android:text="油气专题" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/id_llaout_layer_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dip"
        android:gravity="center" >

        <ListView
            android:id="@+id/id_lstview_layer_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="#00000000" >
        </ListView>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dip"
        android:layout_marginBottom="5dip"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" >

        <Button
            android:id="@+id/id_btn_operator_1"
            style="@style/layer_btn_ok_cancel"
            android:layout_alignParentLeft="true"
            android:text="确定" />

        <Button android:id="@+id/id_btn_operator_2"
            style="@style/layer_btn_ok_cancel"
            android:layout_alignParentRight="true"
            android:text="取消" />
    </RelativeLayout>

</LinearLayout>