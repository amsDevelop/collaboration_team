<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
	<com.esri.android.map.MapView
		android:id="@+id/map" android:layout_width="fill_parent"
		android:layout_height="fill_parent">	
	</com.esri.android.map.MapView>
	
	<FrameLayout
    	android:layout_width="fill_parent"  
   		android:layout_height="fill_parent" >     
     	<ImageButton 
			 android:layout_width="fill_parent"
			 android:layout_height="50dp"
			 android:background="@drawable/searchbg1" />
  	</FrameLayout>  	

    <Button 
     	android:id="@+id/searchBtn" 
     	android:background="@drawable/searchbtn"
         		   	android:layout_marginLeft="5dp"
                   	android:layout_width="145dp"
                   	android:layout_height="32dp"
                   	android:layout_marginTop="9dp"
                  	android:hint="搜索地图"
                   	android:textSize="15sp"
                   	android:layout_alignParentTop="true"
                   	android:textColor="#000000" />
                   	
    <ImageButton 
			 android:id="@+id/dqwzBtn"  
			 android:src="@drawable/dqwz"
			 android:layout_width="50dp"
			 android:layout_height="50dp"
			 android:layout_marginRight="2px"
			 android:layout_alignParentTop="true"
			 android:layout_alignParentRight="true"
			 android:background="#00000000" />
                   	
    <ImageButton
			android:layout_width="1dp" 
			android:layout_height="50dp" 
			android:src="@drawable/fgx"
			android:background="#00000000"
			android:layout_toLeftOf="@id/dqwzBtn" 
			android:layout_marginRight="1dp"
			android:layout_alignParentTop="true" />
			
			
	<ImageButton 
			 android:id="@+id/tcBtn"  
			 android:src="@drawable/tc"
			 android:layout_width="50dp"
			 android:layout_height="50dp"
			 android:layout_marginRight="4dp"
			 android:layout_toLeftOf="@id/dqwzBtn" 
			 android:layout_alignParentTop="true"
			 android:background="#00000000" />	
			 
	<ImageButton 
			android:layout_width="1dp" 
			android:layout_height="50dp" 
			android:layout_marginRight="2dp"
			android:src="@drawable/fgx"
			android:layout_toLeftOf="@id/tcBtn" 
			android:layout_alignParentTop="true"
			android:background="#00000000" />		
		    	
	<ImageButton 
			 android:layout_marginRight="8dp"
			 android:id="@+id/wbBtn"  
			 android:src="@drawable/zl"
			 android:layout_width="50dp"
			 android:layout_height="50dp"
			 android:layout_toLeftOf="@id/tcBtn" 
			 android:layout_alignParentTop="true"
			 android:background="#00000000" />	
			 
	<ImageView 
		android:id="@+id/fdBtn"
		android:layout_width="66dp"
		android:layout_height="43dp" 
		android:layout_marginBottom="18px"
		android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true"
		android:background="@drawable/btn_zoom" 
		/>
		
	<ImageView 
		android:id="@+id/sxBtn"
		android:layout_width="66dp"
		android:layout_height="43dp"
		android:layout_alignTop="@id/fdBtn"
		android:background="@drawable/btn_in"
		android:layout_toLeftOf="@id/fdBtn"
		/>	

	<TextView android:id="@+id/textview" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:layout_alignParentBottom="true"
		android:textColor="#FF0000"
		android:singleLine="false" 
		android:maxLines="8" 
		android:scrollbars="vertical"/>

	<LinearLayout
		android:id="@+id/splashscreen"
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"	
		android:layout_centerInParent="true"		
		android:background="@drawable/sp341"
		android:gravity="center|center"
		>
        	<TextView
        		android:id="@+id/mySpace"   
        		android:layout_width="fill_parent"  
            	android:layout_height="wrap_content"
            	android:text=""   
            /> 
		  	<ProgressBar 
		  	android:layout_height="wrap_content"
		  	android:layout_width="wrap_content"
	  		android:layout_gravity="center_horizontal"	  		
		  	android:indeterminateDrawable="@drawable/loginprogressbar"
		  	android:id="@+id/splash_progressbar"
		  	/> 
	</LinearLayout>

	<ImageView 
		android:id="@+id/poiAnim"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:src="@drawable/ballon2" 
		/>
								
</RelativeLayout>