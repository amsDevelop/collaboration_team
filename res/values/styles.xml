<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="btn_toolbar_btn">
         <item name="android:layout_width">50dp</item> 
         <item name="android:layout_height">50dp</item> 
         <item name="android:gravity">center</item> 
         <item name="android:layout_marginTop">8dp</item> 
         <item name="android:background">@drawable/btn_alpha</item> 
         <item name="android:layout_weight">1</item> 
         <item name="android:textSize">12sp</item> 
         <item name="android:textColor">@color/black</item> 
    </style>
    <style name="btn_search_confirm">
         <item name="android:layout_width">wrap_content</item> 
         <item name="android:layout_height">wrap_content</item> 
         <item name="android:gravity">center</item> 
         <item name="android:background">@drawable/btn_alpha</item> 
         <item name="android:textSize">12sp</item> 
         <item name="android:textColor">@color/black</item> 
    </style>
    <style name="btn_menubar_btn">
         <item name="android:layout_width">wrap_content</item> 
         <item name="android:layout_height">wrap_content</item> 
         <item name="android:background">@drawable/selector_btn_toolbar</item> 
         <item name="android:layout_weight">1</item> 
         <item name="android:textSize">40sp</item> 
    </style>
    <style name="menuview_btn">
         <item name="android:layout_width">wrap_content</item> 
         <item name="android:layout_height">wrap_content</item> 
         <item name="android:background">@drawable/selector_btn_menu</item> 
         <item name="android:textSize">40sp</item> 
    </style>
    <style name="menubar_menuview">
         <item name="android:layout_width">wrap_content</item> 
         <item name="android:layout_height">wrap_content</item> 
    </style>
    
    <style name="text_size">
         <item name="android:textSize">40sp</item> 
         <item name="android:textColor">@color/black</item> 
    </style>
        <style name="btn_menuview_btn">
         <item name="android:layout_width">fill_parent</item> 
         <item name="android:layout_height">wrap_content</item> 
         <item name="android:gravity">center</item> 
         <item name="android:textColor">@color/black</item> 
         <item name="android:background">@drawable/selector_btn_toolbar</item> 
         <item name="android:textSize">20sp</item> 
    </style>
    <style name="layer_btn">
         <item name="android:layout_width">wrap_content</item> 
         <item name="android:layout_height">wrap_content</item> 
         <item name="android:background">@drawable/selector_btn_toolbar</item> 
         <item name="android:textSize">35sp</item> 
    </style>
    <style name="layer_btn_ok_cancel">
         <item name="android:layout_width">wrap_content</item> 
         <item name="android:layout_height">wrap_content</item> 
         <item name="android:background">@drawable/selector_btn_toolbar</item> 
         <item name="android:textSize">40sp</item> 
    </style>
</resources>
